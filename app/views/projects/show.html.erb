<div style="width:100%; height: 300px; overflow-y:hidden">
  <%= image_tag(@project.banner, style:'width:100%') %>
</div>

<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <%= link_to @project.ref_num, root_path %>
      </h1>
      <p class="lead">
        <%= @project.updated_at.strftime("%A, %B %e, %Y") %> by <%= @project.user.username %> | <%= pluralize(@project.views, "View") %>
      </p>
      <hr class="my-4" />
      <div class="project_body">
        <%= @project.body %>
      </div>
    </div>
  </div>
</div>

<% if current_user %>
  <h4 class='d-flex justify-content-between mb-4'>
    <span>Posts</span>
    <% link_to 'New Post', new_post_path(@project), class: 'btn btn-primary' %>
  </h4>
<% else %>
  <h4 class='d-flex justify-content-between mb-4'>
    <span>Posts</span>
  </h4>
<% end %>


<div class="container">
  <div>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>
